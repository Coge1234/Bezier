<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jochen.bezier.demo.AdhesionLayoutActivity">
    <Button
        android:onClick="addCountOnClickListener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="add"/>

    <Button
        android:onClick="minusCountOnClickListener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minus"
        android:layout_marginTop="100dp"/>

    <com.example.jochen.bezier.widget.adhesion.AdhesionLayout
        android:id="@+id/adhesion"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_adhesion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="12"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:visibility="visible" />
    </com.example.jochen.bezier.widget.adhesion.AdhesionLayout>
</FrameLayout>
